@model MyMvcApp.Models.UserProfileViewModel
@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Profile</h1>
    <div class="row">
        <div class="col-lg-4 mb-4">
            <div class="card shadow mb-4">
                <div class="card-body text-center">
                    <img src="@Model.ProfileImageUrl" class="rounded-circle mb-3" width="120" height="120" alt="Profile Photo" />
                    <h4 class="mb-0">@Model.FullName</h4>
                    <div class="text-muted">@Model.Email</div>
                    <div class="mt-3">
                        <span class="badge badge-primary">@Model.Role</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-8 mb-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Account Details</h6>
                </div>
                <div class="card-body">
                    <table class="table table-borderless mb-0">
                        <tbody>
                            <tr>
                                <th style="width:180px;">Full Name:</th>
                                <td>@Model.FullName</td>
                            </tr>
                            <tr>
                                <th>Email:</th>
                                <td>@Model.Email</td>
                            </tr>
                            <tr>
                                <th>Phone:</th>
                                <td>@Model.PhoneNumber</td>
                            </tr>
                            <tr>
                                <th>Username:</th>
                                <td>@Model.UserName</td>
                            </tr>
                            <tr>
                                <th>Role:</th>
                                <td>@Model.Role</td>
                            </tr>
                            <tr>
                                <th>Joined:</th>
                                <td>@Model.CreatedAt.ToShortDateString()</td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="mt-4">
                        <a href="@Url.Action("Edit", "Profile")" class="btn btn-info">
                            <i class="fas fa-user-edit"></i> Edit Profile
                        </a>
                        <a href="@Url.Action("ChangePassword", "Profile")" class="btn btn-warning ml-2">
                            <i class="fas fa-key"></i> Change Password
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>