@{
    ViewData["Title"] = "Home";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - MyMvcApp</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(135deg, #0d1117, #161b22);
            color: #e6edf3;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        .home-wrapper {
            background-color: #1f2937;
            padding: 3rem 2rem;
            border-radius: 1rem;
            text-align: center;
            box-shadow: 0 0 20px rgba(0,0,0,0.4);
            max-width: 800px;
            width: 90%;
        }

        h1 {
            font-size: 2.8rem;
            color: #58a6ff;
            margin-bottom: 1rem;
            font-weight: 700;
        }

        p {
            font-size: 1.2rem;
            color: #c9d1d9;
            margin-bottom: 2rem;
        }

        .btn-login {
            background-color: #238636;
            border: none;
            padding: 12px 30px;
            font-size: 1.1rem;
            border-radius: 8px;
            color: #fff;
            transition: background-color 0.3s ease;
        }

        .btn-login:hover {
            background-color: #2ea043;
            text-decoration: none;
        }

        .note {
            font-size: 1rem;
            margin-top: 2rem;
            color: #ffb233;
            font-style: italic;
        }

        .info-section {
            margin-top: 2rem;
            background-color: #2d3748;
            padding: 2rem;
            border-radius: 0.5rem;
        }

        .info-section h2 {
            font-size: 1.8rem;
            color: #38b2ac;
            margin-bottom: 1rem;
        }

        .info-section p {
            font-size: 1.1rem;
            color: #c9d1d9;
        }

        .link-list {
            text-align: left;
            margin-top: 1.5rem;
        }

        .link-list a {
            color: #38b2ac;
            text-decoration: none;
            display: block;
            margin: 10px 0;
            font-size: 1.1rem;
            padding: 10px;
            border-radius: 5px;
            background-color: #2d3748;
            transition: background-color 0.3s ease;
        }

        .link-list a:hover {
            background-color: #58a6ff;
            color: white;
        }

        .footer {
            text-align: center;
            margin-top: 3rem;
            color: #8b949e;
        }

        .footer span {
            font-size: 0.9rem;
        }

        /* Alert Section for Development Phase */
        .alert-dev-phase {
            width: 100%;
            background-color: #ff6f00;
            color: white;
            padding: 1rem;
            text-align: center;
            font-size: 1.1rem;
            font-weight: bold;
            margin-bottom: 2rem;
        }
    </style>
</head>
<body>

    <!-- Development Phase Alert -->
    <div class="alert-dev-phase">
        🚧 This page is currently under development. User-specific features and data will be added soon. Thank you for your patience!
    </div>

    <div class="home-wrapper">
        <h1>Welcome to Your Dashboard</h1>
        <p>Start building powerful web applications with <strong>ASP.NET Core</strong>.</p>

        <a href="/Auth/Login" class="btn btn-login">Login</a>

        <div class="note">
            🚧 This page is under construction. User-specific features and data will be added soon.
        </div>

        <div class="info-section">
            <h2>Admin Panel</h2>
            <p>As an admin, you can navigate to the following sections:</p>

            <div class="link-list">
                
                <h3>Customers</h3>
                <a href="/Admin/Customers/Index">Customers Index</a>


                <h3>Orders</h3>
                <a href="/Admin/Orders/Index">Orders Index</a>


                <h3>Payments</h3>
                <a href="/Admin/Payments/Index">Payments Index</a>

                <h3>Products</h3>
                <a href="/Admin/Products/Index">Products Index</a>



                <h3>Stock</h3>
                <a href="/Admin/Stock/Index">Stock Overview</a>

            </div>
        </div>
    </div>

</body>
</html>
