@model MyMvcApp.Models.Product

@{
    Layout = "~/Views/Shared/_LayoutSidebar.cshtml";
    ViewData["Title"] = "Product Details";
}

@section topbar {
    <h1 class="h3 mb-0 text-gray-800">Product Details</h1>
}

<div class="card shadow mb-4">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Product Name</dt>
            <dd class="col-sm-9">@Model.ProductName</dd>

            <dt class="col-sm-3">Price</dt>
            <dd class="col-sm-9">@Model.Price.ToString("C")</dd>

            <dt class="col-sm-3">Discount</dt>
            <dd class="col-sm-9">@(Model.Discount.HasValue ? $"%{Model.Discount}" : "-")</dd>

            <dt class="col-sm-3">Stock Quantity</dt>
            <dd class="col-sm-9">@Model.StockQuantity</dd>

            <dt class="col-sm-3">Category</dt>
            <dd class="col-sm-9">@Model.Category</dd>

            <dt class="col-sm-3">Image</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" alt="Product Image" class="img-fluid rounded" style="max-width:150px;" />
                }
                else
                {
                    <span class="text-muted">No image available</span>
                }
            </dd>
        </dl>
        <a asp-action="Edit" asp-route-id="@Model.ProductID" class="btn btn-warning">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
