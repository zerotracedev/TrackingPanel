@model MyMvcApp.Controllers.ProductStockUpdateModel
@{
    Layout = "~/Views/Shared/_LayoutSidebar.cshtml";
    ViewData["Title"] = "Add Product Stock";
}

@section topbar {
    <h1 class="h3 mb-0 text-gray-800">Add Product Stock</h1>
}

<div class="card shadow mb-4">
    <div class="card-body">
        <form asp-action="AddProductStock" method="post">
            <div class="mb-3">
                <label asp-for="ProductID" class="form-label">Product ID</label>
                <input asp-for="ProductID" class="form-control" required />
                <span asp-validation-for="ProductID" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="QuantityToAdd" class="form-label">Quantity to Add</label>
                <input asp-for="QuantityToAdd" class="form-control" required />
                <span asp-validation-for="QuantityToAdd" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Add Stock</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
