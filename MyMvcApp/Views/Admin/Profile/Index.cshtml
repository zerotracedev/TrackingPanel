@model MyMvcApp.Models.UserProfileViewModel
@{
    ViewBag.Title = "My Profile";
    Layout = "~/Views/Shared/_LayoutSidebar.cshtml";
}


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-0">
                <div class="card-body text-center p-4">
                    <img src="@(!string.IsNullOrEmpty(Model.ProfileImageUrl) ? Model.ProfileImageUrl : "/img/default-user.png")"
                         alt="Profile photo"
                         class="rounded-circle shadow-sm mb-3"
                         style="width:130px; height:130px; object-fit:cover; border:3px solid #eaeaea;">
                    
                    <h3 class="fw-bold mb-0">@Model.FullName</h3>
                    <p class="text-muted mb-2">@Model.Email</p>

                    <div class="row text-start mt-4 mb-3">
                        <div class="col-md-6 mb-3">
                            <i class="fas fa-user-tag text-secondary me-2"></i><strong>Role:</strong>
                            <span class="ms-1">@Model.Role</span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <i class="fas fa-phone text-secondary me-2"></i><strong>Phone:</strong>
                            <span class="ms-1">@(!string.IsNullOrEmpty(Model.PhoneNumber) ? Model.PhoneNumber : "-")</span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <i class="fas fa-birthday-cake text-secondary me-2"></i><strong>Birth Date:</strong>
                            <span class="ms-1">@Model.DateOfBirth?.ToString("dd MMM yyyy") ?? "-"</span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <i class="fas fa-venus-mars text-secondary me-2"></i><strong>Gender:</strong>
                            <span class="ms-1">@(!string.IsNullOrEmpty(Model.Gender) ? Model.Gender : "-")</span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <i class="fas fa-calendar-alt text-secondary me-2"></i><strong>Joined:</strong>
                            <span class="ms-1">@Model.CreatedAt.ToString("dd MMM yyyy")</span>
                        </div>
                    </div>

                    <a asp-action="Edit" class="btn btn-outline-primary px-4">
                        <i class="fas fa-edit me-1"></i> Edit Profile
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
