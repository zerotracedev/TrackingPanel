@model MyMvcApp.Models.Customer
@{
    Layout = "~/Views/Shared/_LayoutSidebar.cshtml";
    ViewData["Title"] = "Create Customer";
}

<h1 class="h4 mb-3 text-gray-800">Add New Customer</h1>

<form asp-action="Create" method="post">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label>First Name</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Last Name</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Gender</label>
                <select asp-for="Gender" class="form-control">
                    <option value="">-- Select Gender --</option>
                    <option>Male</option>
                    <option>Female</option>
                    <option>Other</option>
                </select>
            </div>
            <div class="form-group">
                <label>Email</label>
                <input asp-for="Email" class="form-control" required />
            </div>
            <div class="form-group">
                <label>Phone Number</label>
                <input asp-for="PhoneNumber" class="form-control" required />
            </div>
            <div class="form-group">
                <label>Address</label>
                <input asp-for="Address" class="form-control" required />
            </div>
            <div class="form-group">
                <label>City</label>
                <input asp-for="City" class="form-control" required />
            </div>
            <div class="form-group">
                <label>Postal Code</label>
                <input asp-for="PostalCode" class="form-control" required />
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-success mt-3">Save</button>
</form>
