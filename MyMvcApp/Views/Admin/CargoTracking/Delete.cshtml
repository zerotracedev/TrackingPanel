@{
    Layout = "~/Views/Shared/_LayoutSidebar.cshtml";
}


@model MyMvcApp.Models.CargoTracking
@{
    ViewData["Title"] = "Delete Cargo";
}

<h2>Delete Cargo Tracking</h2>

<h3>Are you sure you want to delete this?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Order Number</dt>
        <dd class="col-sm-10">@Model.Order?.OrderNumber</dd>

        <dt class="col-sm-2">Tracking Number</dt>
        <dd class="col-sm-10">@Model.TrackingNumber</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>

        <dt class="col-sm-2">Last Updated</dt>
        <dd class="col-sm-10">@Model.LastUpdated.ToString("g")</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
    