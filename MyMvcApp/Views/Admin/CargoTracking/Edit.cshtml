@{
    Layout = "~/Views/Shared/_LayoutSidebar.cshtml";
}


@model MyMvcApp.Models.CargoTracking
@{
    ViewData["Title"] = "Edit Cargo";
}

<h2>Edit Cargo Tracking</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="OrderId">Order Number</label>
        <select asp-for="OrderId" asp-items="ViewBag.Orders" class="form-control"></select>
    </div>

    <div class="form-group">
        <label asp-for="TrackingNumber"></label>
        <input asp-for="TrackingNumber" class="form-control" required />
        <span asp-validation-for="TrackingNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Status"></label>
        <input asp-for="Status" class="form-control" required />
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
