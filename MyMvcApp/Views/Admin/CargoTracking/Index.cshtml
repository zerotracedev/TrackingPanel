@model IEnumerable<MyMvcApp.Models.Customer>

@{
    ViewData["Title"] = "Customer List";
}

<div class="container mt-5">
    <div class="card shadow rounded-4">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">📋 Customer List</h3>
        </div>
        <div class="card-body">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">First Name</th>
                        <th scope="col">Surname</th>
                        <th scope="col">Email</th>
                        <th scope="col" class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var customer in Model)
                    {
                        <tr>
                            <th scope="row">@customer.CustomerID</th>
                            <td>@customer.FirstName</td>
                            <td>@customer.LastName</td>
                            <td>@customer.Email</td>
                            <td class="text-end">
                                <a asp-action="Edit" asp-route-id="@customer.CustomerID" class="btn btn-sm btn-outline-primary me-1">Edit</a>
                                <a asp-action="Details" asp-route-id="@customer.CustomerID" class="btn btn-sm btn-outline-info me-1">Details</a>
                                <a asp-action="Delete" asp-route-id="@customer.CustomerID" class="btn btn-sm btn-outline-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <a asp-action="Create" class="btn btn-success mt-3">+ Add New Customer</a>
        </div>
    </div>
</div>
